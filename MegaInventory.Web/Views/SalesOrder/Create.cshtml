@using MegaInventory.Web.ViewModel;
@model SalesOrderViewModel

@{
    ViewBag.Title = "Create SalesOrder";
}

@*To support file upload set the form element enctype="multipart/form-data" *@

<form enctype="multipart/form-data" asp-controller="salesorder" asp-action="create"
      method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="ClientId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ClientId" class="form-control" placeholder="ClientId">
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductSku" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductSku" class="form-control" placeholder="ProductSku">
            <span asp-validation-for="ProductSku" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Quantity" class="form-control" placeholder="Quantity" type="number">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
